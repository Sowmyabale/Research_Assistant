@model Research_Assistant.ViewModels.LoginViewModel

<h2>Login</h2>
<form asp-action="Login">
    <div>
        <label>Email</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" />
    </div>
    <div>
        <input asp-for="RememberMe" /> Remember Me
    </div>
    <button type="submit">Login</button>
    @if (User.Identity.IsAuthenticated)
{
    <div class="text-center">
        <a asp-action="Upload" asp-controller="Paper" class="btn btn-success">Upload Research Paper</a>
    </div>
}

</form>
