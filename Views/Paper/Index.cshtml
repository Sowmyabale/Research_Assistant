@model IEnumerable<Research_Assistant.Models.Paper>

<h2>Uploaded Papers</h2>

<form asp-action="Search" method="get" class="mb-3">
    <input type="text" name="query" class="form-control" placeholder="Search by keywords, title, or author..." />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

@if (Model.Count() == 0)
{
    <p>No matching results found.</p>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publication Date</th>
            <th>Keywords</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paper in Model)
        {
            <tr>
                <td>@paper.Title</td>
                <td>@paper.Author</td>
                <td>@(paper.PublicationDate?.ToString("yyyy-MM-dd") ?? "Unknown")</td>
                <td>@paper.Keywords</td>
                <td>
                    <a href="@paper.FilePath" class="btn btn-sm btn-info" target="_blank">View PDF</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
